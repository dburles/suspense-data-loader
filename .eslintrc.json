{
  "extends": ["eslint:recommended", "plugin:react-hooks/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["*.mjs"],
      "parserOptions": {
        "sourceType": "module"
      },
      "globals": {
        "__dirname": "off",
        "__filename": "off",
        "exports": "off",
        "module": "off",
        "require": "off"
      }
    }
  ]
}
